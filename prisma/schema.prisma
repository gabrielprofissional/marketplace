datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int       @id @default(autoincrement())
  name           String
  email          String    @unique
  password       String
  profilePicture String?   // Novo campo para foto de perfil
  isAdmin        Boolean   @default(false)
  isBanned       Boolean   @default(false)
  banReason      String?
  bannedUntil    DateTime?
  products       Product[]
  favorites      Favorite[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  created_at  DateTime  @default(now())
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  favorites   Favorite[] // Relação com usuários que favoritaram o produto
}

model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
  @@unique([userId, productId]) // Evita duplicatas
}
model Settings {
  id          Int      @id @default(autoincrement())
  siteName    String   @default("Marketplace")
  logoUrl     String?  // Caminho da logo no servidor
  faviconUrl  String?  // Caminho do favicon no servidor
  updatedAt   DateTime @updatedAt
}